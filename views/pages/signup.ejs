<%- contentFor('body') %>

<main class="form-signup">
      <form method="post" action="/signup">
        <h1 class="h3 mb-3 fw-normal">Please sign up</h1>
        <% if(error) { %>
            <div class="alert alert-danger" role="alert">
                <%=error.message %>
            </div>
        <% } %>

        <div class="form-floating">
            <% if(values) { %>
                <input type="text" class="form-control" id="floatingInput" placeholder="name@example.com" name="username" value="<%=values.username %>" >
            <% } else {%>
                <input type="text" class="form-control" id="floatingInput" placeholder="name@example.com" name="username">
            <% } %>
          <label for="floatingInput">Username</label>
        </div>
        <div class="form-floating">
            <% if(values) { %>
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password" value="<%=values.password %>">
            <% } else {%>
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
            <% } %>
          <label for="floatingPassword">Password</label>
        </div>
        <div class="form-floating">
            <% if(values) { %>
                <input type="password" class="form-control" id="floatingPasswordConfirmation" placeholder="Password" name="passwordConfirmation" value="<%=values.passwordConfirmation %>">
            <% } else {%>
                <input type="password" class="form-control" id="floatingPasswordConfirmation" placeholder="Password" name="passwordConfirmation">
            <% } %>
            <label for="floatingPasswordConfirmation">Confirm Password</label>
          </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign Up</button>
      </form>
</main>
